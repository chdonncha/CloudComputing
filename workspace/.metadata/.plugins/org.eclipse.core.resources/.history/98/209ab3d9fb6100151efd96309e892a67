package gmail.chdonncha.com;


public class Euler1 {

	//public ArrayList<Integer> multipleOf3;
	//public ArrayList<Integer> multipleOf5;

	
	public static void main(String[] args){
		
		int total = 0;
		int index = 1000;
		
		while(index > 0)
		{
			if(index % 5 == 0 || index % 3 == 0)
			{
				total += index;
			}
			index --;
		}
		System.out.println("Total: " + total);
	}
}
